{
    //*表示任意文件，**表示任意文件夹
    "include":[
        "./src/*"
    ],
    "exclude":[],
    "compilerOptions":{
        //指定编译的es版本
        "target":"es6",
        //module指定要使用的模块化规范
        //'none','commonjs', 'amd', 'system', 'umd', 'es6', 'es2015', 'es2020', 'es2022', 'esnext', 'node12', 'nodenext'
        "module":"es6",
        //outDir 指定编译后的文件目录
        "outDir":"./dist",
        //outfile 将代码合并成一个文件 Only 'amd' and 'system' modules are supported alongside --outFile
       // "outFile":""\
       //是否对JS文件进行编译 默认false,
       //"allowJs":false,
       //是否检查JS代码  默认是false
       //"checkJs":true,
       //是否删除注释
       "removeComments":true,
       //不生成编译后的文件 一般不用
       //"noEmit":false,
        //当有错误时不生成编译后的文件
        "noEmitOnError":true,
            //suoyou yangemoshi 的总开关，设置为TRUE之后 下面四个alwaysStrict
            //noImplicitAny,noImplicitThis,strictNullChecks都不需要设置了
            "strict":true,
            //是否使用严格模式,默认值为false
            // "alwaysStrict":true,
            // //不允许隐式的any类型
            // "noImplicitAny": true,
            // //不允许不明确类型的this
            // "noImplicitThis": true,
            // //严格检查空值
            // "strictNullChecks": true,
    }
    
}